{
  "name": "basic-grpc-service-node",
  "version": "0.1.0",
  "description": "Simple gRPC service using Fastify and TypeScript",
  "scripts": {
    "start": "node --import tsx server.ts",
    "build": "tsc",
    "server": "tsc && node dist/server.js",
    "buf:generate": "buf generate --clean && buf build --as-file-descriptor-set -o sdk/descriptor.bin",
    "cert:generate": "mkcert -install && mkcert -cert-file ./certs/local.crt -key-file ./certs/local.key localhost 127.0.0.1 0.0.0.0 ::1",
    "pm2:start": "pm2 start server.ts --interpreter=\"node\" --node-args=\"--import tsx\" --name=\"basic-grpc-service\" --watch",
    "pm2:stop": "pm2 delete basic-grpc-service",
    "pm2:restart": "pm2 restart basic-grpc-service"
  },
  "keywords": [
    "fastify",
    "connectrpc",
    "grpc",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@bufbuild/buf": "^1.59.0",
    "@bufbuild/protobuf": "^2.10.2",
    "@bufbuild/protoc-gen-es": "^2.10.2",
    "@connectrpc/connect": "^2.0.3",
    "@connectrpc/connect-fastify": "^2.0.3",
    "@connectrpc/connect-node": "^2.0.3",
    "fastify": "^5.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/node": "^24.2.1"
  },
  "overrides": {
    "pino": "9.7.0"
  }
}
